`timescale 1 ps/ 1 ps
module Flancter_vlg_sample_tst(
	clr,
	enable,
	pulse,
	sysclk,
	sampler_tx
);
input  clr;
input  enable;
input  pulse;
input  sysclk;
output sampler_tx;

reg sample;
time current_time;
always @(clr or enable or pulse or sysclk)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module Flancter_vlg_check_tst (
	flag,
	testOut,
	sampler_rx
);
input  flag;
input  testOut;
input sampler_rx;

reg  flag_expected;
reg  testOut_expected;

reg  flag_prev;
reg  testOut_prev;

reg  flag_expected_prev;
reg  testOut_expected_prev;

reg  last_flag_exp;
reg  last_testOut_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	flag_prev = flag;
	testOut_prev = testOut;
end

// update expected /o prevs

always @(trigger)
begin
	flag_expected_prev = flag_expected;
	testOut_expected_prev = testOut_expected;
end



// expected flag
initial
begin
	flag_expected = 1'bX;
end 

// expected testOut
initial
begin
	testOut_expected = 1'bX;
end 
// generate trigger
always @(flag_expected or flag or testOut_expected or testOut)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected flag = %b | expected testOut = %b | ",flag_expected_prev,testOut_expected_prev);
	$display("| real flag = %b | real testOut = %b | ",flag_prev,testOut_prev);
`endif
	if (
		( flag_expected_prev !== 1'bx ) && ( flag_prev !== flag_expected_prev )
		&& ((flag_expected_prev !== last_flag_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port flag :: @time = %t",  $realtime);
		$display ("     Expected value = %b", flag_expected_prev);
		$display ("     Real value = %b", flag_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_flag_exp = flag_expected_prev;
	end
	if (
		( testOut_expected_prev !== 1'bx ) && ( testOut_prev !== testOut_expected_prev )
		&& ((testOut_expected_prev !== last_testOut_exp) ||
			on_first_change[2])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port testOut :: @time = %t",  $realtime);
		$display ("     Expected value = %b", testOut_expected_prev);
		$display ("     Real value = %b", testOut_prev);
		nummismatches = nummismatches + 1;
		on_first_change[2] = 1'b0;
		last_testOut_exp = testOut_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#100000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

